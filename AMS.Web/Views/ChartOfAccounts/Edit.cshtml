@model ChartOfAccount
@{
    ViewData["Title"] = "Edit Account";
}

<h2><i class="fas fa-edit"></i> Edit Account</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="AccountCode" class="form-label"></label>
                        <input asp-for="AccountCode" class="form-control" required />
                        <span asp-validation-for="AccountCode" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AccountName" class="form-label"></label>
                        <input asp-for="AccountName" class="form-control" required />
                        <span asp-validation-for="AccountName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AccountType" class="form-label"></label>
                        <select asp-for="AccountType" asp-items="ViewBag.AccountTypes" class="form-select" required>
                            <option value="">Select Account Type</option>
                        </select>
                        <span asp-validation-for="AccountType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ParentAccountId" class="form-label">Parent Account</label>
                        <select asp-for="ParentAccountId" asp-items="ViewBag.ParentAccounts" class="form-select">
                            <option value="">No Parent (Root Account)</option>
                        </select>
                        <span asp-validation-for="ParentAccountId" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label">
                            Is Active
                        </label>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Account
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}