@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Manage Users";
}

<h1>@ViewData["Title"]</h1>

<p>
    This page allows administrators to manage user roles.
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="EditUserRoles" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
